<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  BackgroundColor="LightGray"
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="v12club.Views.LoginPage"
  xmlns:vm="clr-namespace:v12club.ViewModels">
  <ContentPage.BindingContext>
    <vm:LoginViewModel />
  </ContentPage.BindingContext>
  <ContentPage.Content>
    <StackLayout
      Padding="20,70,20,10"
      VerticalOptions="FillAndExpand">
      <Image Margin="0,0,0,50"
        Source="v12club_logo.png"></Image>
      <Entry
        Text="{Binding Login}"
        x:Name="Login"
        HorizontalTextAlignment="Center" FontSize="30"
        Placeholder="Логин"></Entry>
      <Entry FontSize="30"
        Text="{Binding Password}"
        x:Name="Password"
        HorizontalTextAlignment="Center"
        Placeholder="Пароль"
        IsPassword="True"></Entry>
      <Button BackgroundColor="#fbc430" Margin="0,50,0,0" BorderWidth="2" BorderColor="#e6ae19" HeightRequest="70" FontSize="25"
        VerticalOptions="Center"
        Text="Войти"
        Command="{Binding LoginCommand}" />
      <StackLayout
        IsVisible="false"
        x:Name="WView"></StackLayout>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>