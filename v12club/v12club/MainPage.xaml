<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="v12club.MainPage"
  BackgroundColor="Transparent"
  xmlns:vm="clr-namespace:v12club.ViewModels">
  <ContentPage.Content>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <RelativeLayout
        x:Name="Spinner_wrapper"></RelativeLayout>
      <StackLayout
        VerticalOptions="FillAndExpand"
        HorizontalOptions="FillAndExpand"
        x:Name="Content_wrapper">
        <StackLayout
          x:Name="WebView_wrapper"
          VerticalOptions="FillAndExpand"
          HorizontalOptions="FillAndExpand"></StackLayout>
      </StackLayout>
    </Grid>
  </ContentPage.Content>
</ContentPage>